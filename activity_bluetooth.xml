<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnEnableBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktifkan Bluetooth" />

    <Button
        android:id="@+id/btnDisableBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nonaktifkan Bluetooth" />

    <Button
        android:id="@+id/btnMakeVisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Perangkat Terlihat" />

    <Button
        android:id="@+id/btnDiscoverDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pindai Perangkat" />

    <ListView
        android:id="@+id/listViewPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
